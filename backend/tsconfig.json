{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "/",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noEmit": true,

  },
  "include": ["src/**/*", "prisma/seed/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
